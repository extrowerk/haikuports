SUMMARY="An app for working with graph structured data"
DESCRIPTION="Modular application for Haiku and BeOS designed to view, edit \
and process information which can be represented by a graph structure."
HOMEPAGE="https://github.com/Paradoxianer/ProjectConceptor"
COPYRIGHT="2005-2017 Paradoxon"
LICENSE="MIT"
REVISION="1"
SOURCE_URI="https://github.com/Paradoxianer/ProjectConceptor/archive/v$portVersion.tar.gz"
CHECKSUM_SHA256="f260d8dcb71b0994625454e9bc673b34c9d527c9714715d8e59f3ab98d02aaa9"
SOURCE_DIR="ProjectConceptor-$portVersion"

ARCHITECTURES="x86_gcc2 x86 !x86_64"

PROVIDES="
	ProjectConceptor = $portVersion
	app:ProjectConceptor = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	makefile_engine
	cmd:g++
	cmd:make
	"

BUILD()
{
	cd src
	make $jobArgs OBJ_DIR=objects
	make bindcatalogs OBJ_DIR=objects
}

INSTALL()
{
	projectconceptorDir=$appsDir/ProjectConceptor
	mkdir -p $projectconceptorDir

	cp -af bin/* $projectconceptorDir

	addAppDeskbarSymlink $projectconceptorDir/ProjectConceptor
}
