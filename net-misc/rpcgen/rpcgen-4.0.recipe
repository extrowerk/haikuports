SUMMARY="placeholder"
DESCRIPTION="rpcgen"
HOMEPAGE="https://rpcgen.github.io/"
COPYRIGHT="whoknows"
LICENSE="GNU GPL v2"
REVISION="1"
SOURCE_URI="https://github.com/zenfish/satan/archive/master.zip"
CHECKSUM_SHA256="d9dc651c8ea5424bbb1d4b07de7f469f108fc9ddbfbe9740a1a6d60191cbb5c0"
SOURCE_DIR="satan-master"

ARCHITECTURES="!x86_gcc2 ?x86 x86_64"
SECONDARY_ARCHITECTURES="x86"

# On x86_gcc2 we don't want to install the commands in bin/<arch>/, but in bin/.
commandSuffix=$secondaryArchSuffix
commandBinDir=$binDir
if [ "$targetArchitecture" = x86_gcc2 ]; then
	commandSuffix=
	commandBinDir=$prefix/bin
fi

PROVIDES="
	rpcgen$secondaryArchSuffix = $portVersion compat >= 1
	cmd:rpcgen$secondaryArchSuffix = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	"
BUILD_PREREQUIRES="
	cmd:gcc$secondaryArchSuffix
	cmd:ld$secondaryArchSuffix
	cmd:libtoolize$secondaryArchSuffix
	cmd:make
	"

BUILD()
{
	cd src/rpcgen
	make $jobArgs
}

INSTALL()
{
	mkdir -p $binDir
	cp bin/rpcgen $binDir
}
