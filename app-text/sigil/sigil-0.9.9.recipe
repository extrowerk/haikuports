SUMMARY="A free, open source, multi-platform ebook editor"
DESCRIPTION="Sigil is designed to edit books in ePub format (both ePub 2 and \
ePub 3)."
HOMEPAGE="https://sigil-ebook.com/"
COPYRIGHT="2009, 2010, 2011 Strahinja Markovic
	2011, 2012 John Schember
	2012 Dave Heiland
	2012 John Schember"
LICENSE="GNU GPL v3"
REVISION="1"
SOURCE_URI="https://github.com/Sigil-Ebook/Sigil/archive/$portVersion.tar.gz"
CHECKSUM_SHA256="12c1ace50598aef0a5e1397da3fdcd9c5ed9eba753c476d0ee5ab00a5d2d3764"
SOURCE_DIR="Sigil-$portVersion"
ADDITIONAL_FILES="sigil.rdef.in"

ARCHITECTURES="!x86_gcc2 ?x86 x86_64"
SECONDARY_ARCHITECTURES="?x86"

PYTHON_VERSION="3.6"

PROVIDES="
	sigil$secondaryArchSuffix = $portVersion
	app:Sigil = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lxml_python3
	cmd:python3
	lib:libhunspell_1.6$secondaryArchSuffix
	lib:libminizip$secondaryArchSuffix
#	lib:libpcre$secondaryArchSuffix
	lib:libpython${PYTHON_VERSION}m$secondaryArchSuffix
	lib:libQt5Core$secondaryArchSuffix
	lib:libQt5WebKit$secondaryArchSuffix
	lib:libQt5WebKitWidgets$secondaryArchSuffix
	lib:libz$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	lxml_python3
	devel:libhunspell_1.6$secondaryArchSuffix
	devel:libminizip$secondaryArchSuffix
#	devel:libpcre$secondaryArchSuffix
	devel:libQt5Core$secondaryArchSuffix
	devel:libQt5WebKit$secondaryArchSuffix
	devel:libQt5WebKitWidgets$secondaryArchSuffix
	devel:libz$secondaryArchSuffix
	"
BUILD_PREREQUIRES="
	cmd:gcc$secondaryArchSuffix
	cmd:cmake
	cmd:make
	cmd:pkg_config$secondaryArchSuffix
	cmd:python3
	"

BUILD()
{
	mkdir -p haiku_build && cd haiku_build

	cmake .. \
		-DCMAKE_INSTALL_PREFIX=$appsDir/Sigil \
		-DUSE_SYSTEM_LIBS=ON
	make $jobArgs
}

INSTALL()
{
	cd haiku_build
	mkdir -p $appsDir/Sigil

	make install

	rm -rf $appsDir/Sigil/share/{pixmaps,applications}
	rm -rf $appsDir/Sigil/bin
	rm -rf $appsDir/Sigil/Sigil

	mv $appsDir/Sigil/lib/sigil/sigil $appsDir/Sigil/Sigil
	mv $appsDir/Sigil/lib/sigil/libsigilgumbo.so $appsDir/Sigil/lib

	rm -rf $appsDir/Sigil/lib/sigil

	# Add Haiku resources
	local APP_SIGNATURE="application/x-vnd.qt5-sigil"
	local MAJOR="`echo "$portVersion" | cut -d. -f1`"
	local MIDDLE="`echo "$portVersion" | cut -d. -f2`"
	local MINOR="`echo "$portVersion" | cut -d. -f3`"
	sed \
		-e "s|@APP_SIGNATURE@|$APP_SIGNATURE|" \
		-e "s|@MAJOR@|$MAJOR|" \
		-e "s|@MIDDLE@|$MIDDLE|" \
		-e "s|@MINOR@|$MINOR|" \
		$portDir/additional-files/sigil.rdef.in > sigil.rdef

	addResourcesToBinaries sigil.rdef $appsDir/Sigil/Sigil
	addAppDeskbarSymlink $appsDir/Sigil/Sigil
}
