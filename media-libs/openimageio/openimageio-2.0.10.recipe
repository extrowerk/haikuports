defineDebugInfoPackage openimageio$secondaryArchSuffix \
	"$(getPackagePrefix tools)/$relativeBinDir"/iconvert \
	"$(getPackagePrefix tools)/$relativeBinDir"/idiff \
	"$(getPackagePrefix tools)/$relativeBinDir"/igrep \
	"$(getPackagePrefix tools)/$relativeBinDir"/iinfo \
	"$(getPackagePrefix tools)/$relativeBinDir"/maketx \
	"$(getPackagePrefix tools)/$relativeBinDir"/oiiotool \
	"$libDir"/libOpenImageIO.so.$portVersion \
	"$libDir"/libOpenImageIO_Util.so.$portVersion

BUILD()
{
	# Prepare external deps
	mkdir -p ext
	ln -sfn "$sourceDir2"/robin-map-$srcGitRev2 ext/robin-map

	mkdir -p build
	cd build
	cmake .. \
		-DUSE_EXTERNAL_PUGIXML=ON \
		-DUSE_PYTHON=OFF \
		-DUSE_QT=OFF \
		-DUSE_OPENGL=OFF \
		-DCMAKE_CXX_FLAGS="-DBOOST_NO_CXX11_CONSTEXPR" \
		-DCMAKE_EXE_LINKER_FLAGS="-lnetwork" \
		$cmakeDirArgs
	make $jobArgs
}

INSTALL()
{
	cd build
	make install

	prepareInstalledDevelLibs libOpenImageIO libOpenImageIO_Util
	fixPkgconfig

	# devel package
	packageEntries devel \
		$developDir \
		$dataDir/cmake
	# tools package
	packageEntries tools \
		$binDir
}

TEST()
{
	cd build
	make test
}
