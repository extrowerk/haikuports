SUMMARY="Widely-used Mail Transport Agent (MTA)"
DESCRIPTION="Easily view, navigate, search and use your command history with \
shell history suggest box for Bash and ZSH."
HOMEPAGE="https://www.proofpoint.com/us/open-source-email-solution"
COPYRIGHT="2014 MartinÂ Dvorak"
LICENSE="Apache v2"
REVISION="1"
SOURCE_URI="ftp://ftp.sendmail.org/pub/sendmail/sendmail.$portVersion.tar.gz"
CHECKSUM_SHA256="24f94b5fd76705f15897a78932a5f2439a32b1a2fdc35769bb1a5f5d9b4db439"
PATCHES="sendmail-$portVersion.patchset"

ARCHITECTURES="?x86_gcc2 x86 x86_64"
SECONDARY_ARCHITECTURES="x86"

PROVIDES="
	sendmail$secondaryArchSuffix = $portVersion
	cmd:sendmail$commandSuffix = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lib:libncursesw$secondaryArchSuffix
	lib:libreadline$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libncursesw$secondaryArchSuffix
	devel:libreadline$secondaryArchSuffix
	"
BUILD_PREREQUIRES="
	cmd:aclocal
	cmd:autoconf
	cmd:automake
	cmd:awk
	cmd:gcc$secondaryArchSuffix
	cmd:libtoolize$secondaryArchSuffix
	cmd:m4
	cmd:make
	cmd:pkg_config$secondaryArchSuffix
	"

BUILD()
{
	sh ./Build
}

INSTALL()
{
	sh ./Build install
}
