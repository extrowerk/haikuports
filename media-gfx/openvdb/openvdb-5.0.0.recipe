SUMMARY="Libs for the efficient manipulation of volumetric data"
DESCRIPTION="OpenVDB is an open source C++ library comprising a novel \
hierarchical data structure and a large suite of tools for the efficient \
storage and manipulation of sparse volumetric data discretized on \
three-dimensional grids. It is developed and maintained by DreamWorks \
Animation for use in volumetric applications typically encountered in feature \
film production."
HOMEPAGE="http://www.openvdb.org/"
COPYRIGHT="2012-2016 DreamWorks Animation LLC"
LICENSE="MPL v2.0"
REVISION="1"
SOURCE_URI="https://github.com/dreamworksanimation/openvdb/archive/v$portVersion.tar.gz"
CHECKSUM_SHA256="90fde3b2f9ea95d68ffb19278d07d9b8a7efa5ba0e413bebcea802ce05cda1ae"
PATCHES="openvdb-$portVersion.patchset"

ARCHITECTURES="!x86_gcc2 x86 x86_64"
SECONDARY_ARCHITECTURES="!x86_gcc2 x86"

PROVIDES="
	openvdb$secondaryArchSuffix = $portVersion compat >= 1.2
	lib:libopenvdb$secondaryArchSuffix = 3.0.1 compat >= 3
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

PROVIDES_devel="
	openvdb${secondaryArchSuffix}_devel = $portVersion compat >= 1.2
	cmd:gr2fonttest$secondaryArchSuffix
	devel:libopenvdb$secondaryArchSuffix = 3.0.1 compat >= 3
	"
REQUIRES_devel="
	openvdb$secondaryArchSuffix == $portVersion base
	haiku$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	"
BUILD_PREREQUIRES="
	cmd:cmake
	cmd:gcc$secondaryArchSuffix
	cmd:ld$secondaryArchSuffix
	cmd:make
	"

BUILD()
{
	export BLOSC_ROOT=`finddir B_SYSTEM_DEVELOP_DIRECTORY`
	export TBB_ROOT=`finddir B_SYSTEM_DEVELOP_DIRECTORY`
	export ILMBASE_ROOT=`finddir B_SYSTEM_DEVELOP_DIRECTORY`

	cmake .. \
		$cmakeDirArgs

	make $jobArgs
}

INSTALL()
{
	make install

	prepareInstalledDevelLibs libopenvdb
	fixPkgconfig

	# devel package
	packageEntries devel \
		$binDir \
		$developDir
}
